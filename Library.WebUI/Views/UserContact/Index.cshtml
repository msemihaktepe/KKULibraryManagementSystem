@model MessageViewModel
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UserLayout/_UserLayout.cshtml";
}

<link href="~/css/contact.css" rel="stylesheet" />
<link href="~/css/contact-information.css" rel="stylesheet" />

<br />
<br />
<br />

<h1 class="mt-5 text-center" style="color: #001f99">MESAJ GÖNDER</h1>

<form class="contact-form pb-5" asp-action="Index" asp-controller="UserContact" method="post">
    <input type="text" class="contact-form-text" value="@HttpContextAccessor.HttpContext.Session.GetString("name")" readonly />
    <input type="text" class="contact-form-text" value="@HttpContextAccessor.HttpContext.Session.GetString("lastname")" readonly />
    <textarea asp-for="Message.MessageText" class="contact-form-text" maxlength="500" placeholder="Mesajınız (max 500)"></textarea>
    <span class="form-text text-danger" asp-validation-for="Message.MessageText"></span>
    <input type="submit" class="contact-form-btn" value="Gönder" />
</form>

<hr style="color: #E0AAFF" />
<br />
<br />

<h1 class="text-center pt-3" style="color: #001f99">İLETİŞİM</h1>

<div class="contact-info">
    <div class="contact-card">
        <i class="contact-icon fas fa-envelope"></i>
        <div class="card-content">
            <h3>EMAIL</h3>
            <span>semihaktepe@gmail.com</span>
        </div>
    </div>

    <div class="contact-card">
        <i class="contact-icon fas fa-phone"></i>
        <div class="card-content">
            <h3>TELEFON</h3>
            <span>0531 348 70 71</span>
        </div>
    </div>

    <div class="contact-card">
        <i class="contact-icon fas fa-map-marker-alt"></i>
        <div class="card-content">
            <h3>KONUM</h3>
            <span>İstanbul</span>
        </div>
    </div>
</div>

<br />
<br />