@model BorrowedBookViewModel
@{
    ViewData["Title"] = "ArchiveBorrowedBooks";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1 class="py-3 text-white" style="background-color: #3a393f ">ÖNCEDEN ALINMIŞ KİTAPLAR</h1>
<div class="mx-5">
    <a href="/AdminBorrowedBooks/Index" class="btn btn-outline-success my-4 float-end">Ödünç Alınan Kitaplar</a>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>KULLANICI ADI</th>
                <th>ALINAN KİTAP</th>
                <th>ALINMA TARİHİ</th>
                <th>GERİ İADE TARİHİ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var borrowedBook in Model.BorrowedBooks)
            {
                <tr>
                    <td>@borrowedBook.User.UserName</td>
                    <td>@borrowedBook.Book.BookName</td>
                    <td>@borrowedBook.BorrowDate.GetDateTimeFormats()[0]</td>
                    <td>@borrowedBook.ReturnDate.GetDateTimeFormats()[0]</td>
                    <td><a href="/AdminBorrowedBooks/DeleteBorrowedBook/@borrowedBook.BorrowedBookID" class="btn btn-outline-danger btn-sm">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>