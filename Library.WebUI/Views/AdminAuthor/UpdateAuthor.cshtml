@model AuthorViewModel
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1 class="py-3 text-white" style="background-color: #3a393f ">YAZAR GÜNCELLE</h1>
<div class="mx-5 mt-4">
    <form asp-action="UpdateAuthor" asp-controller="AdminAuthor" method="post">
        <div class="mb-3 form-group">
            <label asp-for="Author.AuthorFirstName" class="form-label">Yazar Adı</label>
            <input type="text" class="form-control" asp-for="Author.AuthorFirstName">
            <span class="form-text text-danger" asp-validation-for="Author.AuthorFirstName"></span>
        </div>
        <div class="mb-3 form-group">
            <label asp-for="Author.AuthorLastName" class="form-label">Yazar Soyadı</label>
            <input type="text" class="form-control" asp-for="Author.AuthorLastName">
            <span class="form-text text-danger" asp-validation-for="Author.AuthorLastName"></span>
        </div>
        <input type="hidden" asp-for="Author.AuthorID" />
        <input type="hidden" asp-for="Author.AuthorStatus" />
        <div class="text-center text-danger"><button type="submit" class="btn btn-outline-warning">Güncelle</button></div>
    </form>
</div>