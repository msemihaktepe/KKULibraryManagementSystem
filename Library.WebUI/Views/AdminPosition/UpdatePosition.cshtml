@model PositionViewModel
@{
    ViewData["Title"] = "UpdatePosition";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1 class="py-3 text-white" style="background-color: #3a393f ">POZİSYON GÜNCELLE</h1>
<div class="mx-5 mt-4">
    <form asp-action="UpdatePosition" asp-controller="AdminPosition" method="post">
        <div class="mb-3 form-group">
            <label asp-for="Position.PositionName" class="form-label">Pozisyon İsmi</label>
            <input type="text" class="form-control" asp-for="Position.PositionName">
            <span class="form-text text-danger" asp-validation-for="Position.PositionName"></span>
        </div>
        <input type="hidden" asp-for="Position.PositionID" />
        <input type="hidden" asp-for="Position.PositionStatus" />
        <div class="text-center"><button type="submit" class="btn btn-outline-warning">Güncelle</button></div>
    </form>
</div>